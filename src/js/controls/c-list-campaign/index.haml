.well
  .row
    .col-sm-9.col-xs-12
      %legend
        Campaigns
    .col-sm-3.col-xs-12.text-right
      %a.btn.btn-primary{"data-bind" => "click: trigger.bind($data,'campaign-create')"} Create a Campaign
  %table.table.table-hover.table-striped
    %thead
      %tr
        %th #
        %th Name
        %th Status
        %th.text-right Actions
        %th 
    %tbody{"data-bind" => "foreach: { data: items, as: 'item' }"}
      %tr
        %td.vertical__middle{"data-bind" => "text: ($index()+1)"}
        %td.text-capitalize.vertical__middle{"data-bind" => "text: $data['name']", :style => "white-space: pre-wrap;"}
        %td.text-capitalize.vertical__middle{"data-bind" => "text: $data['status']()", :style => "white-space: pre-wrap;"}
        %td.text-right
          %a.btn.btn-info{"data-bind" => "click: $parent.trigger.bind(item,'campaign-show')", "data-original-title" => "Show", "data-placement" => "top", "data-toggle" => "tooltip", :title => ""}
            %span.glyphicon.glyphicon-zoom-in{"aria-hidden" => "true"}
          %span{"data-bind" => "if: item.status() === 'ready'"}
            %a.btn.btn-warning{"data-bind" => "click: $parent.trigger.bind(item,'campaign-edit-go')", "data-original-title" => "Edit", "data-placement" => "top", "data-toggle" => "tooltip", :title => ""}
              %span.glyphicon.glyphicon-edit{"aria-hidden" => "true"}
          %span{"data-bind" => "if: item.status() === 'ready'"}
            %a.btn.btn-success{"data-bind" => "click: $parent.change_state", "data-original-title" => "Edit", "data-placement" => "top", "data-toggle" => "tooltip", :title => ""}
              PUBLISH 
          %span{"data-bind" => "if: item.status() === 'started'"}
            %a.btn.btn-success{"data-bind" => "click: $parent.change_state", "data-original-title" => "Edit", "data-placement" => "top", "data-toggle" => "tooltip", :title => ""}
              TERMINATE 